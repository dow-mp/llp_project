<%- include('../partials/head') -%>
<%- include('../partials/header') -%>

    <div class="search-div">
        <h1 class="blurb">search for a local park</h1>

        <form class="search-term-form" action="/search" method="POST">
            <label for="searchTerm"> enter city, state, or zip code:
                <input id="searchTerm" name="searchTerm" type="text" class="vp-form" />
            </label>
            <input type="submit" class="center-submit" />
        </form>

        <div class="map-box">
            <!-- Insert Map Here -->
        </div>
        <div class="map-table">
            <!-- <div class="table-overflow-scroll-div"> -->
                <table class="search-table">
                    <thead class="table-headers">
                        <tr>
                            <th>Park</th>
                            <th>Street</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Zip Code</th>
                            <th>Problem:</th>
                       </tr>
                    </thead>
                    <tbody>
                    <% if(locals.searchTerm) { %>
                       <% for ( let park of searchResults) { %>
                            <tr>
                                <td><%= park.parkName %></td>
                                <td><%= park.parkStreet %></td>
                                <td><%= park.parkCity %></td>
                                <td><%= park.parkState %></td>
                                <td><%= park.parkZip %></td>
                                <td><%= park.helpText %></td>
                            </tr>
                        <% } %>
                    <% } %>
                    </tbody>
                </table>
            <!-- </div> -->
        </div>
    </div>
    
<%- include('../partials/footer') -%>