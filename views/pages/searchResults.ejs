<%- include('../partials/head') -%>

    <div class="table-div">
        <h1 class="blurb">search results</h1>

        <div class="map-table">
            <!-- List of All Parks within the search radius should Display Here -->
            <table class="search-table">
                <thead class="table-headers">
                    <tr>
                        <th>Park</th>
                        <th>Street</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip Code</th>
                        <th>Problem:</th>
                   </tr>
                </thead>
                <tbody>
                    <% for (park of searchResults) { %>
                        <tr>
                            <td><%= park.parkName %></td>
                            <td><%= park.parkStreet %></td>
                            <td><%= park.parkCity %></td>
                            <td><%= park.parkState %></td>
                            <td><%= park.parkZip %></td>
                            <td><%= park.helpText %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="contact-info">
            <a class="mailto link-button" href="/search" rel="noopener noreferrer"><h2>Search Again</h2></a>
        </div>
    
    </div>

    
<%- include('../partials/footer') -%>